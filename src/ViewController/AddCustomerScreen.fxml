<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ViewController.AddCustomerScreenController">
   <children>
      <HBox prefHeight="40.0" prefWidth="400.0">
         <children>
            <Label fx:id="titleHeaderLabel" text="Add Customer">
               <font>
                  <Font size="18.0" />
               </font>
               <HBox.margin>
                  <Insets left="20.0" top="12.0" />
               </HBox.margin>
            </Label>
         </children>
      </HBox>
      <VBox layoutY="46.0" prefHeight="275.0" prefWidth="144.0">
         <children>
            <Label fx:id="customerNameLabel" text="Customer Name">
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </Label>
            <Label fx:id="phoneNumberLabel" text="Phone Number">
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </Label>
            <Label fx:id="addressLabel" text="Address">
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </Label>
            <Label fx:id="postalCodeLabel" text="Postal Code">
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </Label>
            <Label fx:id="countryLabel" text="Country">
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </Label>
            <Label fx:id="firstLevelLabel" text="First Level" />
         </children>
         <padding>
            <Insets left="10.0" />
         </padding>
      </VBox>
      <VBox layoutX="144.0" layoutY="45.0" prefHeight="275.0" prefWidth="248.0">
         <children>
            <TextField fx:id="customerNameTextField" promptText="Enter Customer Name" style="-fx-border-color: black;">
               <VBox.margin>
                  <Insets bottom="8.0" />
               </VBox.margin>
            </TextField>
            <TextField fx:id="phoneNumberTextField" promptText="Enter Phone Number" style="-fx-border-color: black;">
               <VBox.margin>
                  <Insets bottom="8.0" />
               </VBox.margin>
            </TextField>
            <TextField fx:id="addressTextField" promptText="Enter Address" style="-fx-border-color: black;">
               <VBox.margin>
                  <Insets bottom="8.0" />
               </VBox.margin>
            </TextField>
            <TextField fx:id="postalCodeTextField" promptText="Enter Postal Code" style="-fx-border-color: black;">
               <VBox.margin>
                  <Insets bottom="8.0" />
               </VBox.margin>
            </TextField>
            <ComboBox fx:id="countryComboBox" prefWidth="150.0" promptText="Select Country" style="-fx-border-color: black;">
               <VBox.margin>
                  <Insets bottom="8.0" />
               </VBox.margin>
            </ComboBox>
            <ListView fx:id="firstLevelListView" prefHeight="90.0" prefWidth="200.0" style="-fx-border-color: black;" />
         </children>
      </VBox>
      <HBox layoutY="337.0" prefHeight="72.0" prefWidth="400.0">
         <children>
            <Button fx:id="saveButton" mnemonicParsing="false" onAction="#saveButtonClicked" prefHeight="50.0" prefWidth="100.0" text="Save">
               <font>
                  <Font size="18.0" />
               </font>
               <HBox.margin>
                  <Insets left="75.0" right="50.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#cancelButtonClicked" prefHeight="50.0" prefWidth="100.0" text="Cancel">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
         </children>
      </HBox>
   </children>
</AnchorPane>
